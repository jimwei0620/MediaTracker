<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_frag_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mediatracker20.ui.items.ItemListFragment">

    <LinearLayout
        android:id="@+id/media_frag_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/media_frag_top"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/media_frag_sort"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

<!--            <SearchView-->
<!--                android:id="@+id/media_frag_search"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="3"-->
<!--                android:focusable="false"-->
<!--                android:focusableInTouchMode="false"-->
<!--                android:queryBackground="@color/common_google_signin_btn_text_light"-->
<!--                android:touchscreenBlocksFocus="true" />-->

        </LinearLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/media_frag_recyc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
